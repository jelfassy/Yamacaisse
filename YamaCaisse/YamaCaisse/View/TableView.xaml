<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="YamaCaisse.View.TableView">
    <ContentView.Content>
         <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="7*" />

                    </Grid.ColumnDefinitions>
                    <StackLayout x:Name="StkPageList" Grid.Column="0" Orientation="Vertical">
                    </StackLayout>
                    <StackLayout x:Name="StkTableList" Grid.Column="1" MinimumHeightRequest="400" MinimumWidthRequest="400" WidthRequest="400" HeightRequest="400" BackgroundColor="White">
                    </StackLayout>
                </Grid>
    </ContentView.Content>
</ContentView>
