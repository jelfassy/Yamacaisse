<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="YamaCaisse.Pages.HeaderBar"
      Margin="10,20,10,0">
    <Grid.RowDefinitions>
        <RowDefinition Height="80" />
         <RowDefinition Height="1" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        
    </Grid.ColumnDefinitions>
    
    <Button Grid.Column="0" Grid.Row="0" Text="Reservation" Clicked="Click_Reservation" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />
    <Button Grid.Column="1" Grid.Row="0"  Text="Table" Clicked="Click_Table" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />
    <Button Grid.Column="2" Grid.Row="0"  Text="Commande" Clicked="Click_Commande" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />
    <Button Grid.Column="3" Grid.Row="0"  Text="Paiement" Clicked="Click_Paiement" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />     
    <Button Grid.Column="4" Grid.Row="0"  Text="Ticket" Clicked="Click_Ticket" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />     
  
    <Button Grid.Column="5" Grid.Row="0"  Text="Rapport" Clicked="Click_Paiement" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />
    <Button Grid.Column="6" Grid.Row="0"  Text="Logout" Clicked="Click_Paiement" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource TextIconeColor}" />
    <Label Grid.Column= "7" Grid.Row="0" Text= "c'est moi"/>
    <BoxView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="7" BackgroundColor="{StaticResource DividerColor}" HeightRequest="1" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
</Grid>